<%= link_to 'Sign up'         , new_user_path                    %>
<%= link_to 'Sign in'         , signin_path                      %>
<% if logged_in? %>
  <%= link_to 'Log Out'         , signout_path, :method => 'post'  %>
  <%= link_to 'See attractions' , attractions_path                 %>
<% end %>

<% if current_user != nil && @attraction %>
<!-- testing for @attraction.id to avoid any nil values -->
    <%= link_to 'Show Roller Coaster', attraction_path(@attraction) if @attraction.id && current_user.admin %>
<% end %>
